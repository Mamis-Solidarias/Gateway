{
  "UsersHttpClient": {
    "BaseUrl": "http://users:8000"
  },
  "GraphQl": {
    "Beneficiaries":{
      "Url": "http://localhost/api/beneficiaries/graphql"
    },
    "Donors":{
      "Url": "http://localhost/api/donors/graphql"
    },
    "Users":{
      "Url": "http://localhost/api/users/graphql"
    },
    "Campaigns":{
      "Url": "http://localhost/api/campaigns/graphql"
    }
  },
  "OpenTelemetry": {
    "Jaeger": {
      "Endpoint": "http://jaeger:6831/api/traces"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "users": {
        "Destinations": {
          "users-1": {
            "Address": "http://users/"
          }
        }
      },
      "beneficiaries": {
        "Destinations": {
          "beneficiaries-1": {
            "Address": "http://beneficiaries/"
          }
        }
      },
      "donors": {
        "Destinations": {
          "donors-1": {
            "Address": "http://donors/"
          }
        }
      },
      "campaigns": {
        "Destinations": {
          "campaigns-1": {
            "Address": "http://campaigns/"
          }
        }
      },
      "frontend": {
        "Destinations": {
          "frontend-1": {
            "Address": "http://host.docker.internal:3000/"
          }
        } 
      }
    }
  }
}

